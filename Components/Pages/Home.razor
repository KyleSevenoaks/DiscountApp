@page "/"
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Routing

<PageTitle>Fordelstorget | Login</PageTitle>
<div class="article-backdrop">
    <div class="min-h-screen flex items-center justify-center bg-gray-50">
        <div class="max-w-md w-full space-y-8 p-8 bg-white rounded-lg shadow-lg">
            <div class="text-center">
                <h2 class="text-3xl font-bold text-gray-900">Velkommen tilbake</h2>
                <p class="mt-2 text-sm text-gray-600">Vennligst logg inn på kontoen din</p>
            </div>
            <form class="mt-8 space-y-6" @onsubmit="HandleLogin">
                <div class="space-y-4">
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">E-postadresse</label>
                        <input id="email" name="email" type="email" required
                            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                            @bind="email" />
                    </div>
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700">Passord</label>
                        <input id="password" name="password" type="password" required
                            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                            @bind="password" />
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="remember-me" name="remember-me" type="checkbox"
                            class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                            @bind="rememberMe" />
                        <label for="remember-me" class="ml-2 block text-sm text-gray-900">Husk meg</label>
                    </div>
                    <div class="text-sm">
                        <a href="#" class="font-medium text-blue-600 hover:text-blue-500">Glemt passordet?</a>
                    </div>
                </div>

                <div>
                    <NavLink
                        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                        href="/dashboard">
                        Logg inn
                    </NavLink>
                </div>
            </form>

            <div class="text-center mt-4">
                <p class="text-sm text-gray-600">
                    Har du ikke en konto?
                    <a href="/signup" class="font-medium text-blue-600 hover:text-blue-500">Registrer deg her</a>
                </p>
            </div>
        </div>
    </div>
</div>

