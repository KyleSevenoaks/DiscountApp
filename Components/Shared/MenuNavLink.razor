@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web

<NavLink
    class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:text-white hover:bg-gradient-to-r hover:from-orange-500 hover:to-orange-600 rounded-xl transition-all duration-200 group"
    href="@Href" ActiveClass="text-white bg-gradient-to-r from-orange-500 to-orange-600">
    <div class="w-10 h-10 flex items-center justify-center rounded-lg group-hover:bg-opacity-0 transition-all">
        @IconContent
    </div>
    <div class="flex-1">
        <span class="font-medium">@Title</span>
        <p class="text-xs">
            @Description</p>
    </div>
</NavLink>

@code {
    [Parameter]
    public string Href { get; set; } = "";

    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public string Description { get; set; } = "";

    [Parameter]
    public RenderFragment? IconContent { get; set; }
}